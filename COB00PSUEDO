VARIABLE DECLARATIONS
	Alphanumeric - I-REC, I-NAME, I-ID, I-LNAME, I-FNAME, I-INIT, 
		O-DATE, O-PCTR, O-GPA, O-EX-STRT-SAL, O-ID, O-LNAME, O-FNAME, O-SCTR, MORE-RECTS = "YES"
	Numeric - I-GPA, I-EX-STRT-SAL, I-DATE, C-SCTR=0, C-PCTR=0
	
MAIN
	INIT
	WHILE MORE-RECTS = "YES"
		CALL MAINLINE
	CALL CLOSING

MAINLINE
	CALL CALCS
	CALL OUTPUT
	CALL READ
	
INIT
	OPEN INPUT FILE
	OPEN OUTPUT FILE
	REQUEST SYSTEM DATE
	GET I-DATE
	O-DATE = I-DATE
	CALL READ
	CALL HOTDOGS

READ
	READ RECORD, I-REC, I-ID, I-NAME, I-LNAME, I-FNAME, I-INIT, I-GPA, I-EX-STRT-SAL
	IF END OF FILE
		MORE-RECTS = "NO"

HOTDOGS
	C-PCTR += 1
	O-PCTR = C-PCTR
	PRINT TITLE LINE
	PRINT BLANK LINE
	PRINT COLUMN HEADING LINE 1
	PRINT COLUMN HEADING LINE 2
	PRINT BLANK LINE
	
CALC
	C-SCTR += 1

OUTPUT
	O-ID = I-ID
	O-LNAME = I-LNAME
	O-FNAME = I-FNAME
	O-GPA = I-GPA
	O-EX-STRT-SAL = I-EX-STRT-SAL

	PRINT DETAIL LINE O-ID, O-LNAME, O-FNAME, O-GPA, O-EX-STRT-SAL
	PRINT BLANK LINE
	IF EOP
		CALL HOTDOGS
		
CLOSING
	CALL GRANDTOTALS
	CLOSE INPUT FILE
	CLOSE OUTPUT FILE
	
GRANDTOTALS
	O-SCTR = C-SCTR
	PRINT BLANK LINE
	PRINT GRANDTOTAL LINE O-SCTR